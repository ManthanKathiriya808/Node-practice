<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    

        <form action="/insert" method="post">
             <table  border align="center" >
                <tr>
                    <th>Id</th>
                    <td><input type="number" name="id" /></td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td><input type="text" name="name" /></td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td><input type="text" name="email" /></td>
                </tr>
                <tr>
                    <th>Password</th>
                    <td><input type="text" name="password" /></td>
                </tr>
                <tr align="center">
                    <td colspan="2"><input type="submit" /></td>
                </tr>
            </table>
        </form>

        <table style="margin-top: 30px;" border cellpadding="10" align="center">
            <tr>
                <td>Id</td>
                <td>Name</td>
                <td>Email</td>
                <td>Password</td>
                <td>Delete</td>
                <td>update</td>
            </tr>
            <% data.map((ele)=>{%>

                <tr>
                    <td>
                        <%= ele.id %>
                    </td>
                    <td>
                        <%= ele.name %>
                    </td>
                    <td>
                        <%= ele.email %>
                    </td>
                    <td>
                        <%= ele.password %>
                    </td>
                    <td>
                        <a href="/delete?id=<%=ele.id%>"><button>delete</button></a>
                    </td>
                    <td>
                        <a href="/edit?id=<%=ele.id%>"><button>update</button></a>
                    </td>
                </tr>

            <%   })%>
        </table>
   
</body>
</html>
























































